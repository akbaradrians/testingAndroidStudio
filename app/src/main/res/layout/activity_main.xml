<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.asus.studycaseakbar.MainActivity">


    <TextView
        android:id="@+id/txtMakanMalam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:text="Makan Malam"
        android:textAlignment="center"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/txtDenganMilea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:text="dengan Milea"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="68dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/txtmakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="none"
            android:text="Nasi Uduk"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="120dp" />

        <EditText
            android:id="@+id/txtjumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="none"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="200dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btneatbus"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="EATBUS" />

        <Button
            android:id="@+id/btnabnormal"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="ABNORMAL" />

    </LinearLayout>

</LinearLayout>